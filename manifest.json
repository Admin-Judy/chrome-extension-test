{
  "manifest_version": 2,
  "name": "Note App",
  "version": "1.0",
  "description": "A note-taking Chrome extension with iPhone-like UI",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "downloads"
  ]
}

